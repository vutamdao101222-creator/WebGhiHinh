@page "/login"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using System.ComponentModel.DataAnnotations
@using WebGhiHinh.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject HttpClient Http
@inject IJSRuntime JS

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Đăng nhập</PageTitle>

<div class="login-page">
    <div class="tech-marquee-container">
        <div class="tech-marquee-text">
            @for (int i = 0; i < 12; i++)
            {
                <span>HOPLONG TECH</span>
            }
        </div>
    </div>

    <div class="login-card @(isGlowing ? "glow-strong" : "")">
        <h1 class="login-title">Đăng nhập</h1>

        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="input-group">
                <InputText @bind-Value="loginModel.Username"
                           class="login-input"
                           placeholder="Tên đăng nhập"
                           @oninput="TriggerGlow" />
            </div>

            <div class="input-group">
                <InputText @bind-Value="loginModel.Password"
                           type="password"
                           class="login-input"
                           placeholder="Mật khẩu"
                           @oninput="TriggerGlow" />
            </div>

            @if (!string.IsNullOrEmpty(error))
            {
                <p class="login-error"
                   style="background:#fee2e2;padding:10px;border-radius:8px;border:1px solid red; color: #991b1b;">
                    @error
                </p>
            }

            <button class="btn" type="submit" disabled="@loading">
                @if (loading)
                {
                    <div class="spinner"></div>
                    <span>Đang xử lý...</span>
                }
                else
                {
                    <span>Đăng nhập</span>
                }
            </button>

            <div style="margin-top: 1.5rem; text-align: center; font-size: 0.95rem;">
                <span style="color: #6b7280;">Bạn chưa có tài khoản?</span>
                <a href="/register"
                   style="color: #3b82f6; text-decoration: none; font-weight: 600; margin-left: 5px; transition: color 0.2s;">
                    ĐĂNG KÝ NGAY
                </a>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private LoginDto loginModel { get; set; } = new();
    private bool loading = false;
    private string error = "";
    private bool isGlowing = false;

    private async Task HandleLogin()
    {
        loading = true;
        error = "";
        StateHasChanged();

        try
        {
            // 1. Gọi API đăng nhập
            var response = await Http.PostAsJsonAsync("api/auth/login", loginModel);

            if (!response.IsSuccessStatusCode)
            {
                // Đọc lỗi từ API (nếu có)
                var content = await response.Content.ReadAsStringAsync();
                error = string.IsNullOrEmpty(content) ? "Đăng nhập thất bại (Lỗi server)" : content;
                return;
            }

            var result = await response.Content.ReadFromJsonAsync<LoginResponse>();

            if (result is null || string.IsNullOrEmpty(result.access_token))
            {
                error = "Lỗi: Không nhận được Token từ server!";
                return;
            }

            // 2. Lưu Token vào LocalStorage
            await JS.InvokeVoidAsync("localStorage.setItem", "token", result.access_token);
            
            // Lưu thêm thông tin phụ để tiện dùng ở client (không bảo mật, chỉ để hiện tên)
            if (!string.IsNullOrEmpty(result.username))
                await JS.InvokeVoidAsync("localStorage.setItem", "username", result.username);
            
            if (!string.IsNullOrEmpty(result.role))
                await JS.InvokeVoidAsync("localStorage.setItem", "role", result.role);

            // 3. Cập nhật trạng thái Authentication (QUAN TRỌNG)
            if (AuthStateProvider is CustomAuthStateProvider authProvider)
            {
                await authProvider.MarkUserAsAuthenticated(result.access_token);
            }

            // 4. Đợi một chút để state cập nhật xong (tránh race condition)
            await Task.Delay(100);

            // 5. Chuyển trang dựa trên Role
            // Kiểm tra role trả về từ API
            var role = result.role?.Trim().ToLowerInvariant();

            if (role == "admin" || role == "admin1")
            {
                // Nếu là Admin -> Vào Dashboard Admin
                Nav.NavigateTo("/admin", true); // true = Force reload để refresh state toàn trang
            }
            else
            {
                // Nếu là User thường -> Vào trang Scan
                Nav.NavigateTo("/scan", true);
            }
        }
        catch (Exception ex)
        {
            error = $"Lỗi kết nối: {ex.Message}";
            Console.WriteLine(ex.ToString());
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private void TriggerGlow()
    {
        isGlowing = true;
        // Tắt hiệu ứng sau 300ms
        Task.Delay(300).ContinueWith(_ =>
        {
            InvokeAsync(() =>
            {
                isGlowing = false;
                StateHasChanged();
            });
        });
    }

    public class LoginDto
    {
        [Required(ErrorMessage = "Vui lòng nhập tên đăng nhập")]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Vui lòng nhập mật khẩu")]
        public string Password { get; set; } = "";
    }

    public class LoginResponse
    {
        public string access_token { get; set; } = "";
        public string username { get; set; } = "";
        public string role { get; set; } = "";
    }
}