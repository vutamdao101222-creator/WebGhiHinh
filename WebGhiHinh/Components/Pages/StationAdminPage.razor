@page "/admin/stations"
@using Microsoft.AspNetCore.Authorization
@using WebGhiHinh.Models
@inject HttpClient Http
@inject IJSRuntime JS

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Quản lý Trạm</PageTitle>

<div class="page-container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">🏭 Quản lý Trạm</h1>
            <p class="text-muted mb-0">Thiết lập và giám sát các trạm làm việc</p>
        </div>
        <a href="/admin" class="btn btn-light btn-back shadow-sm">
            <i class="bi bi-arrow-left"></i> Quay lại Dashboard
        </a>
    </div>

    <div class="card create-card mb-4 border-0 shadow-sm">
        <div class="card-body p-4">
            <h5 class="section-title text-primary mb-3">
                <i class="bi bi-plus-circle-fill me-2"></i>Thêm Trạm Mới
            </h5>
            <div class="d-flex flex-wrap gap-3 align-items-center">
                <div class="flex-grow-1">
                    <input @bind="newStationName" class="form-control input-lg" placeholder="Nhập tên trạm (VD: Trạm Kiểm Hóa 1)..." />
                </div>
                <div class="flex-grow-1" style="max-width: 350px;">
                    <select @bind="selectedCamId" class="form-select input-lg">
                        <option value="">-- Chọn Camera (Tùy chọn) --</option>
                        @foreach (var cam in unassignedCameras)
                        {
                            <option value="@cam.Id">@cam.Name (@cam.RtspUrl)</option>
                        }
                    </select>
                </div>
                <button class="btn btn-primary btn-create px-4" @onclick="CreateStation">
                    <i class="bi bi-plus-lg"></i> Tạo Ngay
                </button>
            </div>
        </div>
    </div>

    <div class="card list-card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table custom-table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4" style="width: 60px;">ID</th>
                            <th>Tên Trạm</th>
                            <th>Camera Kết Nối</th>
                            <th>Trạng Thái</th>
                            <th class="text-end pe-4" style="width: 180px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (stations.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 empty-state">
                                    <div class="mb-3 empty-icon">🏢</div>
                                    <h6 class="text-muted">Chưa có trạm nào được khởi tạo</h6>
                                    <p class="text-secondary small">Vui lòng thêm trạm mới ở phía trên.</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var st in stations)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-secondary">#@st.Id</td>
                                    <td>
                                        <span class="fw-bold text-dark fs-6">@st.Name</span>
                                    </td>
                                    <td>
                                        @if (st.Camera != null)
                                        {
                                            <div class="camera-badge">
                                                <span class="cam-icon">📷</span>
                                                <div>
                                                    <div class="fw-bold text-dark" style="font-size: 0.9rem;">@st.Camera.Name</div>
                                                    <div class="text-muted small text-truncate" style="max-width: 200px;">@st.Camera.RtspUrl</div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic small">-- Chưa gán --</span>
                                        }
                                    </td>
                                    <td>
                                        @if (st.CurrentUserId != null)
                                        {
                                            <div class="status-badge busy">
                                                <span class="dot"></span>
                                                <span>Đang hoạt động: <strong>@(st.CurrentUser?.Username ?? "Unknown")</strong></span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="status-badge free">
                                                <span class="dot"></span>
                                                <span>Sẵn sàng</span>
                                            </div>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            @if (st.CurrentUserId != null)
                                            {
                                                <button class="btn btn-force btn-icon" @onclick="() => ForceRelease(st.Id)" title="Ngắt kết nối người dùng">
                                                    ⚡
                                                </button>
                                            }
                                            <button class="btn btn-delete btn-icon" @onclick="() => DeleteStation(st.Id)" title="Xóa trạm">
                                                🗑️
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    // ... GIỮ NGUYÊN CODE C# CỦA BẠN Ở ĐÂY KHÔNG CẦN SỬA ...
    private List<Station> stations = new();
    private List<Camera> unassignedCameras = new();
    private string newStationName = "";
    private int? selectedCamId;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            await AttachToken();
            stations = await Http.GetFromJsonAsync<List<Station>>("api/station") ?? new();
            unassignedCameras = await Http.GetFromJsonAsync<List<Camera>>("api/station/unassigned-cameras") ?? new();
            StateHasChanged();
        }
        catch { }
    }

    private async Task CreateStation()
    {
        if (string.IsNullOrWhiteSpace(newStationName)) return;

        try
        {
            await AttachToken();
            await Http.PostAsJsonAsync("api/station", new { Name = newStationName, CameraId = selectedCamId });
            newStationName = ""; selectedCamId = null;
            await LoadData();
        }
        catch { }
    }

    private async Task DeleteStation(int id)
    {
        if (!await JS.InvokeAsync<bool>("confirm", "Bạn có chắc chắn muốn xóa trạm này không?")) return;
        await AttachToken();
        await Http.DeleteAsync($"api/station/{id}");
        await LoadData();
    }

    private async Task ForceRelease(int id)
    {
        if (!await JS.InvokeAsync<bool>("confirm", "Hành động này sẽ buộc người dùng rời trạm. Tiếp tục?")) return;
        await AttachToken();
        await Http.PostAsJsonAsync("api/station/force-release", new { StationId = id });
        await LoadData();
    }

    private async Task AttachToken()
    {
        var token = await JS.InvokeAsync<string>("localStorage.getItem", "token");
        if (!string.IsNullOrEmpty(token))
            Http.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
    }
}